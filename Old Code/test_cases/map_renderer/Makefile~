all: map_gen

map_gen: main.o Player.o
	g++ main.o Player.o -lncurses -o map_gen -g -W -Wall -ansi -pedantic
	
main.o: main.cpp
	g++ -c main.cpp

Player.o: Player.cpp
	g++ -c Player.cpp
	
all: map_rend

map_rend: main.o Player.o
	g++ main.o Player.o -lncurses -o map_rend -g -W -Wall -ansi -pedantic
	
main.o: main.cpp
	g++ -c main.cpp

Player.o: Player.cpp
	g++ -c Player.cpp
